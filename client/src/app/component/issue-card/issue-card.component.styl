

.card-title
	display: grid
	grid-template-columns: 1fr 200px
	grid-gap: var(--padding)


.buttons
	opacity: 0
	visibility: hidden
	transition: all .3s ease
	display: grid
	grid-template-columns: 1fr 1fr
	grid-gap: var(--padding)

mat-card
	&:hover
		.buttons
			opacity: 1
			visibility: visible
			transition: all .3s ease

.card-title span
	cursor: pointer
	&:hover
		opacity: .7

.status
	padding: 2px
	display: inline-block
	border-radius: 3px
	margin-left: 5px
	background-color: var(--primary-color-subtle)
	&.open
		background: var(--accent-color)
		color: var(--primary-text)
	&.todo
		background: orange
		color: var(--secondary-text-hue)
	&.progress
		background: yellow
		color: var(--secondary-text)
	&.close
		background: var(--danger-color)
		color: var(--primary-text)
