.navigation
	display: grid
	grid-template-columns: 200px 1fr

nav
	display flex
	align-items center
	justify-content flex-end

li
	padding: 0
	padding 0 var(--padding)
	cursor: pointer
	display flex
	align-items center
	transition: all .3s ease
	&:hover
		opacity .6


.logo
	cursor: pointer
	transition: all .3s ease
	display flex
	align-items center
	&:hover
		opacity .6

.mat-icon
	padding 0 var(--padding) 0 0
