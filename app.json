{
  "addons": [
    "mongolab"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "JWT": {
      "required": true
    },
    "MONGODB_URI": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "name": "bts",
  "scripts": {
    "postdeploy": "NPM_CONFIG_PRODUCTION=false npm run client-install && npm run build --prefix client"
  },
  "stack": "heroku-18"
}
